class BankAccount(private var balance: Int = 0){
    
    fun deposit(amount: Int){
        if(amount > 0){
            balance += amount
            println("Пополнение $amount, ваш баланс: $balance")
        }
        else{
            println("Пополнение невозможно")
        }
    }
    
    fun withdraw(amount: Int){
        if(amount > 0){
            if(balance >= amount){
            balance -= amount
            println("Снято $amount, ваш баланс: $balance")
            }
            else{
                println("Нехватка средств")    
            }
        }
        else{
            println("Снятие невозможно")
        }
    }
    
    fun getBalance(){
        println("Ваш текущий баланс: $balance")
    }
}

fun main() {
    println("Введите исходный баланс: ")
    val MMM = BankAccount(readln().toInt())
    println("Введите депозит: ")
    val dep = readln().toInt()
    MMM.deposit(dep)
    println("Введите снятие: ")
    val with = readln().toInt()
    MMM.withdraw(with)
    MMM.getBalance()
}
