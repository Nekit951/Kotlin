import kotlin.random.Random

fun main() 
{
    var attempts = 0
    val x = 0
    val rand = Random.nextInt(1,100) 
    while(true)
    {
        attempts++
        println("Число: $rand")
        var x = readLine()?.toIntOrNull() ?: 0
        when
        {
            x < rand -> println("Больше")
            x > rand -> println("Меньше")
            else -> println("Правильно") 
        }
        println("Количество попыток: $attempts")
    } 
}
