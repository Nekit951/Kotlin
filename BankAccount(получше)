class BankAccount(var balance: Int){
    
    fun deposit(amount: Int){
        if(balance > 0){
            this.balance += amount
            println("Пополнение $amount, ваш баланс: $balance")
        }
        else{
            println("Пополнение невозможно")
        }
    }
    
    fun withdraw(amount: Int){
        if(balance => amount){
            this.balance -= amount
            println("Снято $amount, ваш баланс: $balance")
        }
        else if(amount <= 0){
            println("Снятие невозможно")
        }
        else{
            println("Недостаточно средств")
        }
     }
    
    fun getBalance(){
        println("Ваш текущий баланс: $balance")
    }
}

fun main() {
    val MMM = BankAccount(20)
    MMM.deposit(10)
    MMM.withdraw(20)
    MMM.getBalance()
}
