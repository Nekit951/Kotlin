class SmartHome(
    val houseName: String,
    private var temperature: Int,
    val isSecurityEnabled: Boolean
    )
{
    
    fun setTemperature(newTemp:  Int){
        temperature = newTemp
        println("Температура установлена на $newTemp")
    }
    
    fun increaseTemp(newTemp: Int){
        temperature++
        println("Температура увеличена до $temperature")
    }
    
    fun decreaseTemp(newTemp: Int){
        temperature--
        println("Температура уменьшена до $temperature")
    }
    
    fun enableSecurity(){
        if(isSecurityEnabled == true){
            println("Система безопасности активирована")
        }
        else{
            println("Система безопасности отключена")
        }
    }
    
    fun isLights(lights: Boolean){
        if(lights == true){
            println("Свет включен во всём доме")
        }
        else{
            println("Свет выключен во всём доме")
        }
    }
    
    fun isComfortble(newTemp: Int){
        if(newTemp >= 18 && newTemp <= 25)
        {
            println("Дома комфортно")
        }
        else{
            println("Дома некомфортно")
        }
    }
    
    fun printHouseStatus(lights: Boolean){
        println("=== СТАТУС ДОМА: $houseName ===")
        println("Температура $temperature")
        println("Система безопасности $isSecurityEnabled")
        println("Освещение $lights")
    }

}

fun main(){
    val aaa = SmartHome("ЯЯЯ", 20, true)
    aaa.setTemperature(20)
    aaa.increaseTemp(2)
    aaa.decreaseTemp(1)
    aaa.enableSecurity()
    aaa.isLights(true)
    aaa.isComfortble(23)
    aaa.printHouseStatus(true)
}
